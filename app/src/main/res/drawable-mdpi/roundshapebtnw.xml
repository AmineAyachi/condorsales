<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true" >
            <shape>
                <solid
                    android:color="@color/condor_white_tr2" />  <!-- pressed color -->
                <stroke
                    android:width="1dp"
                    android:color="@color/condor_white_tr" />
                <corners
                    android:bottomRightRadius="50dp"
                    android:bottomLeftRadius="50dp"
                    android:topLeftRadius="50dp"
                    android:topRightRadius="50dp"/>

            </shape>
        </item>
        <item>
            <shape>
                <gradient
                    android:startColor="@color/condor_white_tr"
                    android:endColor="@color/condor_white_tr"
                    android:angle="270" />                      <!-- button color -->
                <stroke
                    android:width="1dp"
                    android:color="@color/condor_white_tr" />
                <corners
                    android:bottomRightRadius="50dp"
                    android:bottomLeftRadius="50dp"
                    android:topLeftRadius="50dp"
                    android:topRightRadius="50dp"/>

            </shape>
        </item>
    </selector>

