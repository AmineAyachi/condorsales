<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true" >
            <shape>
                <solid
                    android:color="#051A42" />  <!-- pressed color -->
                <stroke
                    android:width="1dp"
                    android:color="#051A42" />
                <corners
                    android:bottomRightRadius="50dp"
                    android:bottomLeftRadius="50dp"
                    android:topLeftRadius="50dp"
                    android:topRightRadius="50dp"/>

            </shape>
        </item>
        <item>
            <shape>
                <gradient
                    android:startColor="#051A42"
                    android:endColor="#051A42"
                    android:angle="270" />                      <!-- button color -->
                <stroke
                    android:width="1dp"
                    android:color="#051A42" />
                <corners
                    android:bottomRightRadius="50dp"
                    android:bottomLeftRadius="50dp"
                    android:topLeftRadius="50dp"
                    android:topRightRadius="50dp"/>

            </shape>
        </item>
    </selector>

