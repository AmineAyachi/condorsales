<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:background="@android:color/transparent"
    android:cacheColorHint="@android:color/transparent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    >

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <RelativeLayout
            android:background="#051A42"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/background_border"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            >

            <TextView
                android:id="@+id/comercial_name"
                android:text="hani hani hani hani"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textSize="18dp"
                android:textColor="#051A42"
                android:paddingTop="3dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/ref"
                android:layout_below="@+id/comercial_name"
                android:text="hani"
                android:textSize="16dp"
                android:textColor="#919194"
                android:paddingTop="0dp"
                android:fontFamily="@font/montserrat"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/item_stocklist_box"
            android:layout_weight="10">


            <TextView
                android:singleLine="true"
                android:ellipsize="marquee"
                android:id="@+id/qt"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:textColor="#051A42"
                android:text="00000"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>