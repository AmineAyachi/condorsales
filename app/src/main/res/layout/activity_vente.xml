<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.VenteActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/main_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
        <include layout="@layout/vente_bar_layout" android:id="@+id/main_page_toolbar"/>

    </com.google.android.material.appbar.AppBarLayout>



    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_below="@+id/main_bar_layout"
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/messagetext"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/montserratr"
            android:textSize="18dp"
            android:textColor="#EB1313"
            />

    </RelativeLayout>


    <EditText
        android:id="@+id/serailnumber"
        android:layout_below="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shapesn"
        android:maxLines="1"
        android:fontFamily="@font/montserratr"
        android:textSize="26dp"

        />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/serailnumber"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >
            <Button
                android:id="@+id/done_btn"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terminer"
                android:textSize="20dp"
                android:shadowColor="@android:color/transparent"
                android:background="@drawable/button"
                android:textColor="#fff"
                android:fontFamily="@font/montserratr"
                android:textAllCaps="false"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>

