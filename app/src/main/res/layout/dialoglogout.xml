<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/condorbg">
        <TextView
            android:id="@+id/coderef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Authentification échouée!"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="18dp"
            android:gravity="center"
            android:fontFamily="@font/montserratr"
            android:layout_marginBottom="10dp"
            android:padding="2dp"
            />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/text"
        android:textColor="@color/hanicondorcolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_dialog"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat"
        android:text="Les informations d'authentification (code ou mot de passe) enregistrées sur votre appareil ne sont plus valides. \n "
        android:textAlignment="center"
        android:textSize="14sp" />


    <Button
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reconnecter"
        android:id="@+id/close_btn"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:shadowColor="@android:color/transparent"
        android:padding="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:textColor="#fff"
        android:fontFamily="@font/montserratr"
        android:textAllCaps="false"
        />

</RelativeLayout>