<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:cacheColorHint="@android:color/transparent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    >

    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_stocklist_box">

        <RelativeLayout
            android:id="@+id/r_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/coderef_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="marquee"
                android:fontFamily="@font/montserrat"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:text="Référence : "
                android:textColor="#051A42"
                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:layout_toRightOf="@+id/coderef_txt"
                android:id="@+id/coderef_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="marquee"
                android:fontFamily="@font/montserrat"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:text=" AFH645"
                android:textColor="#051A42"
                android:textSize="18dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/r_top"
            android:id="@+id/r_mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="marquee"
                android:fontFamily="@font/montserrat"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:text="Total : "
                android:textColor="#051A42"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_toRightOf="@+id/price_txt"
                android:id="@+id/price_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="marquee"
                android:fontFamily="@font/montserrat"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:text="5000.00"
                android:textColor="#051A42"
                android:textSize="18dp"
                android:textStyle="bold" />


            <TextView
                android:layout_toRightOf="@+id/price_val"
                android:id="@+id/price_da"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="marquee"
                android:fontFamily="@font/montserrat"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:text=" DA"
                android:textColor="#051A42"
                android:textSize="18dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/r_mid"
            android:id="@+id/r_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="marquee"
                android:fontFamily="@font/montserrat"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:text="Date : "
                android:textColor="#051A42"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_toRightOf="@+id/date_txt"
                android:id="@+id/date_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="marquee"
                android:fontFamily="@font/montserrat"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:text="20/20/2020"
                android:textColor="#051A42"
                android:textSize="18dp"
                android:textStyle="bold" />

        </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>