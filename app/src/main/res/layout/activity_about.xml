<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context="Activities.AboutActivity">

    <include
        android:id="@+id/main_page_toolbar"
        layout="@layout/about_bar_layout" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/img"
            android:layout_width="250dp"
            android:layout_height="170dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="20dp"
            android:src="@drawable/app_logo" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:text="Condor sales est une solution de force de vente pour les POS. \n Condor sales propose différentes fonctionnalitées notamment le suivi des incentives en temps réel.  "
            android:textAlignment="center"
            android:textSize="10sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/roundshapebtn"
            android:contentDescription="@string/btnfiche_contentdesc"
            android:fontFamily="@font/montserrat"
            android:padding="10dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:text="App version"
            android:textColor="@color/color_white" />

        <TextView
            android:id="@+id/nvert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:text="Pour plus d'information Appeller le numero vert"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/nvertbtn"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/nvert"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:src="@drawable/freecall" />

        <TextView
            android:id="@+id/social_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nvertbtn"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat"
            android:text="Réseaux Sociaux"
            android:textColor="@color/hanicondorcolor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/social_media">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="4"> <!-- to show what the parent is -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                   >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/facebookc"
                        android:id="@+id/facebook"
                        android:elevation="6dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/youtubec"
                        android:id="@+id/youtube"
                        android:elevation="6dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                   >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/twitterc"
                        android:id="@+id/twitter"
                        android:elevation="6dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                   >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/instagramc"
                        android:id="@+id/instagram"
                        android:elevation="6dp"
                        />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/nvertbtn"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/social_media"
            android:background="@color/hanicondorcolor" />
        <TextView
            android:id="@+id/termsanduse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/condordz"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat"
            android:text="Conditions d'utilisation et Politique de confidentialité"
            android:textSize="10sp"
         />

        <TextView
            android:id="@+id/condordz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/politique"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat"
            android:text="www.condor.dz"
            android:textColor="@color/hanicondorcolor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/politique"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/montserrat"
            android:text="Copyright © Condor Electronics,Tous droits réservés."
            android:textSize="10sp" />


    </RelativeLayout>


</LinearLayout>